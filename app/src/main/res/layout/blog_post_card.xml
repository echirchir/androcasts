<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_title"
                android:layout_toRightOf="@+id/read_photo"
                android:layout_toEndOf="@+id/read_photo"
                android:layout_alignParentTop="true"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_author"
                android:textStyle="normal|italic"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/read_photo"
                android:layout_toEndOf="@+id/read_photo"
                android:layout_below="@+id/post_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_date"
                android:textStyle="normal|italic"
                android:gravity="end"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/post_author"
                android:layout_toEndOf="@+id/post_author"
                android:layout_below="@+id/post_title"
                android:text=" on 02/04/2015"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>